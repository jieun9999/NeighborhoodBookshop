<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">


    <ImageView
        android:id="@+id/bookclub_picture"
        android:layout_width="127dp"
        android:layout_height="143dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/picture"
        app:layout_constraintEnd_toStartOf="@+id/open_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_add"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="#FFEAD2"
        android:text="수정"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_invest"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FFEAD2"
        android:text="취소"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_literature"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/open_gallery"
        android:layout_width="26dp"
        android:layout_height="21dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bookclub_picture"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/plus" />


    <Switch
        android:id="@+id/switch_online"
        android:layout_width="59dp"
        android:layout_height="33dp"
        android:layout_marginStart="130dp"
        android:checked="false"
        android:showText="true"
        android:textOff="OFF"
        android:textOn="ON"
        android:thumb="@drawable/setting_switch_thumb"
        android:track="@drawable/setting_switch_track"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="10dp"
        android:text="모임 주제 설정 (2가지)"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_it"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

    <Button
        android:id="@+id/btn_it"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D9D9D9"
        android:text="IT/컴퓨터"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_social"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#D9D9D9"
        android:text="정치/사회"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_literature"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#D9D9D9"
        android:text="고전/문학"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_invest"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#D9D9D9"
        android:text="주식/투자"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_poem"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#D9D9D9"
        android:text="시/소설"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_art"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#D9D9D9"
        android:text="문화/예술"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_human"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#D9D9D9"
        android:text="인문/과학"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_econo"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D9D9D9"
        android:text="경제/경영"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btn_marketing"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D9D9D9"
        android:text="기획/마케팅"
        android:textColor="#000000"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="13dp"
        android:text="온라인 여부"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/switch_online"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="340dp"
        android:layout_height="89dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookclub_picture">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bookclub_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="북클럽 이름"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="340dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="30dp"
        app:counterEnabled="true"
        app:counterMaxLength="500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_online">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bookclub_introduce"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:hint="북클럽 소개"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>